{
  "printWidth": 140,

  "tabWidth": 4,
  "singleQuote": false,
  "arrowParens": "always",

  "trailingComma": "all",
  "semi": true,
  "bracketSameLine": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "jsxSingleQuote": false,

  "plugins": ["prettier-plugin-tailwindcss"],

  "overrides": [
    {
      "files": [
        "*.{ts,tsx}"
      ],
      "options": {
        "tabWidth": 2,
        "singleQuote": true,
        "arrowParens": "always"
      }
    }
  ]
}
